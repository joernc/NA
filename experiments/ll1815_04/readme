# Get NA configuration files from GitHub
# For instructions below to work, you need to:
# (1) have a github account
# (2) have been granted access to
#     https://github.com/joernc/NA
# (3) have added ssh key to your github account
#     https://help.github.com/articles/generating-an-ssh-key
 cd /nobackup/$USER
 git clone git@github.com:joernc/NA

# Get MITgcm from GitHub
 cd /nobackup/$USER/NA
 git clone git@github.com:MITgcm/MITgcm.git

# Request interactive nodes
 qsub -I -q debug -l select=49:ncpus=20:model=ivy,walltime=2:00:00 -m abe

# # Compile MITgcm
 cd /nobackup/$USER/NA/MITgcm
 mkdir build run
 cd /nobackup/$USER/NA/MITgcm/build
 module load comp-intel/2016.2.181 mpi-sgi/mpt.2.14r19 hdf4/4.2.12 hdf5/1.8.18_mpt netcdf/4.4.1.1_mpt
 ../tools/genmake2 -of ../tools/build_options/linux_amd64_ifort+mpi_ice_nas -mpi -mods ../../experiments/ll1815_04/code
 make depend
 make -j 16

# Run MITgcm
 cd /nobackup/$USER/NA/MITgcm/run
 cp ../../experiments/ll1815_04/namelists/* .
 ln -sf /nobackup/dmenemen/tarballs/NA_2160/input_ll1815/* .
 ln -sf /nobackup/dmenemen/tarballs/NA_2160/input/runoff* .
 ln -sf /nobackup/dmenemen/tarballs/NA_2160/era5 .
 ln -sf /nobackup/dmenemen/tarballs/NA_2160/tides/* .
 mkdir diags
 mpiexec -n 970 ../build/mitgcmuv

# Monitor cfl condition during run
 cd /nobackup/$USER/NA/MITgcm/run
 tail -f STDOUT.0000 | grep advcfl_W

# # Compile on Caltech
 export MITGCMROOT="/central/groups/oceanphysics/anirban/MITgcm/"
 module load intel/19.1
 cd build_ll1815/
 $MITGCMROOT/tools/genmake2 -rootdir=$MITGCMROOT -mods=/central/groups/oceanphysics/anirban/NA/experiments/ll1815_03/code -mpi -of=$MITGCMROOT/tools/build_options/linux_amd64_ifort+impi
 make depend
 make -j 16

# # Run on Caltech cluster
 sbatch SLURM_run_script_caltech

# Comparison results are available in
# /nobackup/$USER/NA/experiments/ll1815_04/results/STDOUT.0000
